<h2>Listing teachers</h2>
 
<%= link_to 'New Teacher', new_teacher_path, class:"btn btn-danger" %>
<br /><br />
  
<table class="table table-bordered">
  <tr>
    <th>Username</th>
    <th>Name</th>
    <th>Email Address</th>
    <th>Date Of Birth</th>
    <th></th>
  </tr>
 
  <% @teachers.each do |teacher| %>
    <tr>
      <td><%= teacher.username %></td>
      <td><%= teacher.name %></td>
      <td><%= teacher.email_address %></td>
      <td><%= teacher.date_of_birth %></td>
      <td>
        <div class="btn-group btn-group-sm">
          <%= link_to 'Show', teacher_path(teacher), class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_teacher_path(teacher), class: 'btn btn-primary' %>
          <%= link_to 'Destroy', teacher_path(teacher), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %>
        </div>
     </td>
    </tr>
  <% end %>
</table>